@using DeployingWebsites101Dojo.Extensions
@{
    ViewBag.Title = "Deploying Websites 101 Dojo";
}

<div class="jumbotron">
    <h1>It works!</h1>
</div>

<div class="row">
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-4">Machine Name</label>
            <div class="col-sm-8">
                <p class="form-control-static">@System.Environment.MachineName</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4">Local IP</label>
            <div class="col-sm-8">
                <p class="form-control-static">@Html.GetLocalIPAddress()</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4">Server Location</label>
            <div class="col-sm-8">
                <p class="form-control-static">@Server.MapPath("~")</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4">Client IP</label>
            <div class="col-sm-8">
                <p class="form-control-static">@Html.ViewContext.RequestContext.HttpContext.Request.UserHostAddress</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4">Is local?</label>
            <div class="col-sm-8">
                <p class="form-control-static">@Html.ViewContext.RequestContext.HttpContext.Request.IsLocal</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4">Is Secure?</label>
            <div class="col-sm-8">
                <p class="form-control-static">@Html.ViewContext.RequestContext.HttpContext.Request.IsSecureConnection</p>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-4">Colour Setting</label>
            <div class="col-sm-3">
                <div style="margin-top: 5px;color: @Html.GetColourSetting();background-color:@Html.GetColourSetting()">&nbsp;</div>
            </div>
        </div>
    </form>
</div>

